.hint-container {
  position: relative;
  z-index: 99;
}

xforms\:hint,
xf\:hint {
  display: none;

  position: absolute;
  top: 1.5em;
  left: 15px;

  padding: 5px;
  z-index: 100;
  background-color: #323232;
  color: #fff;
  -moz-border-radius: 5px;
  -webkit-border-radius: 5px;
}

xforms\:hint.active,
xf\:hint.active {
  display: inline-block;
}

xforms\:hint.inactive,
xf\:hint.inactive {
  display: none;
}
